{
  "name": "@ruchernchong/number-format",
  "version": "2.3.4",
  "description": "Package to convert huge numbers to their respective named values in thousands separator",
  "type": "module",
  "main": "dist/numberFormat.js",
  "module": "dist/numberFormat.js",
  "types": "dist/numberFormat.d.ts",
  "files": ["dist"],
  "author": "Ru Chern Chong <hello@ruchern.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ruchernchong/number-format.git"
  },
  "keywords": ["number", "format", "utility"],
  "scripts": {
    "build": "rm -rf dist && tsc",
    "build:watch": "pnpm build --watch",
    "lint": "biome check .",
    "lint:fix": "biome check . --fix",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "test": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@vitest/coverage-v8": "^3.0.5",
    "semantic-release": "^24.2.0",
    "typescript": "^5.2.2",
    "vite": "^6.0.11",
    "vitest": "^3.0.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild"]
  }
